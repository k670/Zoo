<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <context-param>
        <param-name>log4jConfiguration</param-name>
        <param-value>file:///D:/projects/personal/ZooTry1/out/artifacts/ZooTry1_war_exploded/WEB-INF/classes/log4j2.xml</param-value>
    </context-param>
<!--
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>-->

    <servlet>
        <servlet-name>mvc-dispatcher</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>
    <servlet-mapping>
        <servlet-name>mvc-dispatcher</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>

    <filter>
        <filter-name>FilterZoo</filter-name>
        <filter-class>k670.FilterZoo</filter-class>
    </filter>
    <filter>
        <filter-name>FilterLetter</filter-name>
        <filter-class>k670.FilterLetter</filter-class>
    </filter>

    <filter-mapping>
        <filter-name>FilterLetter</filter-name>
        <servlet-name>ServletZoo</servlet-name>
    </filter-mapping>
    <filter-mapping>
        <filter-name>FilterZoo</filter-name>
        <servlet-name>ServletZoo</servlet-name>
    </filter-mapping>

    <servlet>
        <servlet-name>ServletZoo</servlet-name>
        <servlet-class>k670.ServletZoo</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ServletAnimalListChange</servlet-name>
        <servlet-class>k670.ServletAnimalListChange</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>ServletAnimalListChange</servlet-name>
        <url-pattern>/change/animal/*</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ServletZoo</servlet-name>
        <url-pattern>/hello/*</url-pattern>
    </servlet-mapping>

    <listener>
        <listener-class>k670.AnimalDumperListener</listener-class>
    </listener>

</web-app>

